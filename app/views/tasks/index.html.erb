<div class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-blue-600">
        To-Do List
      </h1>
      <p class="mt-2 text-lg text-gray-600">Get things done, one task at a time.</p>
    </div>

    <!-- Add New Task Button -->
    <%= link_to "Add New Task", new_task_path, class: "mb-8 inline-block bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-3 rounded-lg shadow-lg hover:from-purple-700 hover:to-blue-700 transition-all duration-300 transform hover:scale-105" %>

    <!-- Task List -->
    <ul class="space-y-4">
      <% @tasks.each do |task| %>
        <li class="bg-white bg-opacity-90 backdrop-blur-sm p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <!-- Checkbox and Task Title -->
            <%= form_with model: task, local: true, class: "flex items-center space-x-4 flex-grow" do |form| %>
              <%= form.check_box :completed, onchange: "this.form.submit()", class: "w-6 h-6 text-purple-600 border-2 border-gray-300 rounded-lg focus:ring-purple-500" %>
              <span class="<%= task.completed ? 'line-through text-gray-500' : 'text-gray-800' %> text-xl font-medium">
                <%= task.title %>
              </span>
            <% end %>

            <!-- Edit and Delete Buttons -->
            <div class="flex space-x-3">
              <%= link_to "Edit", edit_task_path(task), class: "text-purple-600 hover:text-purple-800 transition duration-200" %>
              <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 transition duration-200" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>